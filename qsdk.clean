#!/bin/bash
help(){
    echo -e "clean rootfs_dir"
    echo -e "\t app rootfs_dir"
}
if [[ ! -d tools ]];then
    help
    exit 1
fi
if [[ $# < 1 ]] ; then
    help
    exit 1
fi
find $1 -name "*.o"  |xargs -i rm -rfv {}
find $1 -name "*.la"  |xargs -i rm -rfv {}
find $1 -name "*.la~"  |xargs -i rm -rfv {}
rm -rfv $1/usr/local 
rm -rfv $1/usr/share


